source 'https://rubygems.org'

gem 'sinatra'                             # web-framework that we use
gem 'pg'                                  # PostgreSQL library to connect to psql-database
gem 'activerecord'                        # ORM
gem 'sinatra-activerecord'                # Sinatra-specific version of ORM
gem 'bcrypt'                              # Encryption library for ActiveRecord

gem 'rake'                                # Ruby's default webserver environment
gem 'pry'                                 # Debugging tool that lets you pause and debug execution at any code-line


